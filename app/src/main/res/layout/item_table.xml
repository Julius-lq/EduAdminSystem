<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/course_item_layout_height"
    android:alpha="0.7"
    android:visibility="invisible"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/course_item_linearlayout_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="专业英语"
            android:textColor="#fff"
            android:textSize="@dimen/table_context_textsize"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云综教C-203"
            android:textColor="#fff"
            android:textSize="@dimen/table_context_textsize" />

        <TextView
            android:id="@+id/course_7_5_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双周"
            android:textColor="#fff"
            android:textSize="@dimen/table_context_textsize"
            android:visibility="invisible" />
    </LinearLayout>
</androidx.cardview.widget.CardView>